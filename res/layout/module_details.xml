<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="170dp"
    android:minWidth="270dp"
    android:orientation="vertical" >

   <TextView
       android:id="@+id/textViewModuleDetailsHeading"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_margin="10dp"
       android:text="@string/stap_module_details_heading"
       android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:id="@+id/tableLayoutModuleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp" >

        <TableRow
            android:id="@+id/tableRowModuleDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewModuleDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/stap_module_details_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textViewModuleDetailsNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="12"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRowModuleDetailsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewModuleDetailsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/stap_module_details_status"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textViewModuleDetailsStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRowModuleDetailsAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewModuleDetailsAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/stap_module_details_action"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerModuleDetailsActionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12" />

        </TableRow>

    </TableLayout>
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp" >

        <Button
            android:id="@+id/buttonModuleDetailsOk"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="@string/stap_button_ok"/>

        <Button
            android:id="@+id/buttonModuleDetailsCtl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="@string/stap_button_action" />

    </LinearLayout>  

</LinearLayout>